<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/wheatherLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:weightSum="100"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Time"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:text="Date"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:id="@+id/txt_timer"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="15dp"
                android:text="0.0.0"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:gravity="center"
                android:id="@+id/txt_date"
                android:maxLines="1"
                android:textSize="15dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/detail"
        android:layout_weight="3"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_miles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="0"
            android:textColor="?attr/colorPrimary"
            android:textSize="100sp"/>

        <TextView
            android:id="@+id/txtSpeedUnit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/txt_miles"
            android:layout_alignTop="@+id/txt_miles"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/txt_miles"
            android:gravity="center_vertical"
            android:text="miles"
            android:textSize="26sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="3dp"

        android:paddingRight="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="150"
android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_weight="50"
            android:layout_marginRight="8dp"
            android:text="START"
            android:id="@+id/btn_start"
            android:textColor="@color/icons"
            android:background="@color/accent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:layout_weight="50"
            android:text="STOP"
            android:id="@+id/btn_stop"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/icons"
            android:background="@color/accent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:layout_weight="50"
            android:layout_marginLeft="8dp"
            android:text="SAVE"
            android:id="@+id/btn_save"
            android:textColor="@color/icons"
            android:background="@color/accent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>